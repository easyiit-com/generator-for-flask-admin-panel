{% extends "admin/layout/default.jinja2" %}

{% block css %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/theme/dracula.min.css">
{% endblock css %}
{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.32.8/ace.min.js" integrity="sha512-3c17/omJ/iHIFqPLIThx7TXuOuu1+umsw5SfeZhJxoYbCwTdnqbIlgnAUQOUBxvi6pl1Pu131NkC4ga0cliHHw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> 
<script src="{{ url_for('generator.static', filename='js/generator.js') }}"></script>
{% endblock javascript %}
{% block content %}
<!-- Page body -->
<div class="page-body pt-6">
    <div class="container-xl">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form id="generator_form" method="post" action>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            {{_('Selecte Table')}}
                        </label>
                        <div class="select-wrapper">
                            <select class="form-control table_name" name="table_name" id="table_name">
                                <option value="-1" selected>{{_('Please Select A Table')}}</option>
                                {% for table in tables_list %}
                                <option value="{{table}}">{{table}}</option>
                                {% endfor %}
                            </select>
                            <div class="arrow-down"></div>
                        </div>
                    </div>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            {{_('Table fields show in list')}}
                        </label>
                        <div class="inline" id="table_fields"></div>
                    </div>
                     
                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="model_code_checked" name="model_code_checked" value="1" checked> {{_('Model Code')}}
                        </label>
                        <textarea class="form-control model_code" name="model_code" id="model_code"
                            rows="10"></textarea>
                    </div>

                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" name="template_index_code_checked" id="template_index_code_checked" value="1" checked> {{_('Template Index Code')}}
                        </label>
                        <textarea class="form-control template_index_code" name="template_index_code"
                            id="template_index_code" rows="10"></textarea>

                    </div>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="template_add_code_checked" name="template_add_code_checked" value="1" checked> {{_('Template Add Code')}}
                        </label>
                        <textarea class="form-control template_add_code" name="template_add_code" id="template_add_code"
                            rows="10"></textarea>

                    </div>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="template_edit_code_checked" name="template_edit_code_checked" value="1" checked> {{_('Template Edit Code')}}
                        </label>
                        <textarea class="form-control template_edit_code" name="template_edit_code"
                            id="template_edit_code" rows="10"></textarea>

                    </div>

                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="views_code_checked" name="views_code_checked" value="1" checked> {{_('View Code')}}
                        </label>
                        <textarea class="form-control views_code" name="views_code" id="views_code"
                            rows="10"></textarea>
                    </div>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="api_code_checked" name="api_code_checked" value="1"> {{_('Api Code')}}
                        </label>
                        <textarea class="form-control api_code" name="api_code" id="api_code"
                            rows="10"></textarea>
                    </div>
                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="schema_code_checked" name="schema_code_checked" value="1"> {{_('Schema Code')}}
                        </label>
                        <textarea class="form-control schema_code" name="schema_code" id="schema_code"
                            rows="10"></textarea>
                    </div>

                    <div class="mb-[20px]">
                        <label class="form-label">
                            <input class="form-check-input table_fields" type="checkbox" id="js_code_checked" name="js_code_checked" value="1" checked> {{_('JavaScript Code')}}
                        </label>
                        <textarea class="form-control js_code" name="js_code" id="js_code" rows="10"></textarea>

                    </div>

                    <div class="mb-[20px]">
                        <label class="form-label">
                            {{_('Route Code')}} ({{_('Copy the following addition and paste it into the route.py file.')}})
                        </label>
                        <textarea class="form-control route_code" name="route_code" id="route_code"
                            rows="10"></textarea>
                    </div>
                    <button type="button" form="generator_form" id="generator_button"
                        class="btn btn-primary !py-3 w-100">
                        {{_('Submit')}}
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>
{% endblock content %}